<div class="main col-10">
<%= link_to "/trainings" do %>
<button class="fr-btn fr-btn--icon-left fr-btn--secondary fr-icon-arrow-left-s-line">Retour aux formations</button>
<% end %>
  <div class="main-card">
        <%= image_tag @training.image, width: "100%",  alt:"image débutant", class:"imgcover" %>
        <div class="card-show-training">
        <div class="training-comp details">
          <h1><%= @training.title %></h1>
          <p><%= @training.description %></p>
          <%= simple_form_for [@training, @booking] do |f| %>
            <div class="fr-btn fr-btn--icon-right m-0 p-0">
            <button><%= f.button :submit, "M'inscrire à la formation" %></button>
            </div>
          <% end %>
        </div>
        <div class="training-comp cals">
            <main class="calcard">
            <section class="calcard__header">
              <h4>Jour de la formation :</h4>
              <h5>Mardi 7 janvier</h5>
              <h5>2022</h5>
            </section>
            <section class="calcard__body">
