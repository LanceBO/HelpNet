<div class="row">
  <div class="card-problem onload" data-controller="scrollelement">
    <div class="pbcard">
      <!-- <%= link_to sub_email_path do %> -->
      <div class="fr-tile fr-enlarge-link fr-tile--horizontal-md">
        <div class="fr-tile__body">
            <h5>Problème matériel</h5>
            <h6>Lenteur, virus, dysfonctionnement, comportement anormal, imprimante en panne...</h6>
        </div>
        <div class="fr-tile__img">
            <span class="icn fr-icon-computer-fill" aria-hidden="true"></span>
        </div>
      </div>
     <!--  <% end %> -->
    </div>
    <div class="pbcard">
     <!-- <%= link_to sub_email_path do %> -->
      <div class="fr-tile fr-enlarge-link fr-tile--horizontal-md">
        <div class="fr-tile__body">
            <h5>Problème sur Internet</h5>
            <h6>Problème d'accès à Internet, victime d'une arnaque en ligne, problème de sécurité...</h6>
        </div>
        <div class="fr-tile__img">
            <span class="icn fr-icon-wifi-fill" aria-hidden="true"></span>
        </div>
      </div>
     <!-- <% end %> -->
    </div>
    <div class="pbcard">
      <%= link_to sub_email_path do %>
      <div class="fr-tile fr-enlarge-link fr-tile--horizontal-md">
        <div class="fr-tile__body">
            <h5>Problème e-mail</h5>
            <h6>Erreur d'envoi ou de réception, SPAM, pièce jointe trop lourde...</h6>
        </div>
        <div class="fr-tile__img">
            <span class="icn fr-icon-mail-open-fill" aria-hidden="true"></span>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
