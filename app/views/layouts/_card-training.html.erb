<div class="card-training">
  <% @trainings.each do |training| %>
  <div class="pbcard">


    <div class="fr-card">
    <div class="fr-card__body">
        <div class="fr-card__content">
            <h3 class="fr-card__title">
               <%= link_to training.title, training_path(training) %>
            </h3>
            <h6 class="text-secondary">Catégorie : <%= training.category %></h6>
            <p class="fr-card__desc"><%= training.description %></p>
        </div>
        <div class="fr-card__footer">
            <ul class="fr-btns-group fr-btns-group--inline-reverse fr-btns-group--inline-lg">
                <li>
                    <%= link_to training do %>
                      <button class="fr-btn">Inscription</button>
                    <% end %>
                </li>
            </ul>
        </div>
    </div>
    <div class="fr-card__header">
        <div class="fr-card__img">
          <%= image_tag training.image, alt:"image débutant" %>
        </div>
    </div>
</div>


  </div>
  <% end %>
</div>
